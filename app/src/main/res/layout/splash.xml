<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.MahaBharti.in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#1B2983"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="महाराष्ट्रातील सर्व जॉब अपडेट्स."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColor="#0464c4"
        android:textSize="20dp"
        android:visibility="gone"
        android:fontFamily="sans-serif"
        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="700px"
        android:layout_height="400px"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/splashimg" />

    <TextView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="लोड होत आहे.."
        android:visibility="gone"
        android:textColor="#DC0F0F0F"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver : 2.3.8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textSize="8dp"
        android:fontFamily="sans-serif"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Retry.."
        android:background="#f57f17"
        android:visibility="gone"
        android:id="@+id/retry"/>



</RelativeLayout>